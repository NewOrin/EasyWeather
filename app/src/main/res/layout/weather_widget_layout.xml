<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/weather_widget_item_rl"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/weather_widget_ll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:background="#efe000"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="#efe000"
            android:gravity="center"
            android:orientation="vertical">

            <TextClock
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:format24Hour="HH:mm"
                android:format12Hour="hh:mm"
                android:textColor="@color/white"
                android:textSize="50sp"
                android:textStyle="bold"/>

            <TextClock
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:format24Hour="MM/dd EE"
                android:textSize="16sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="#1eaaef"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/weather_widget_show_cond_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/weather_widget_city_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="上海"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="雷阵雨"/>

                <TextView
                    android:id="@+id/weather_widget_round_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="上海"/>

                <TextView
                    android:id="@+id/weather_widget_show_tmp_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="34C"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">

        <GridView
            android:id="@+id/weather_widget_gridview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:numColumns="3"/>
    </LinearLayout>
</LinearLayout>