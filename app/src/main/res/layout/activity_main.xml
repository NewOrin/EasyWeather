<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="now"
            type="com.neworin.easyweather.entity.Now"/>
    </data>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.neworin.easyweather.home.MainActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="300dp">

            <TextView
                android:id="@+id/home_current_tmp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:text="@{now.tmp}"
                android:textColor="#000"
                android:textSize="40sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/home_current_tmp_inf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/home_current_tmp"
                android:layout_centerHorizontal="true"
                android:text="@{now.cond.txt+@string/home_tmp_unit}"
                android:textSize="20sp"/>
        </RelativeLayout>
    </RelativeLayout>
</layout>